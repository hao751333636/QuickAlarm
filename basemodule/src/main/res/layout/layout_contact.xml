<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/ll_root"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.base.basemodule.wedget.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_white_bg"
        android:drawableLeft="@mipmap/ic_search_black"
        android:drawablePadding="8dp"
        android:hint="搜索"
        android:maxLines="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5d76f7"
        android:textSize="16sp"
        android:text="企业通讯录"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <com.base.basemodule.wedget.WaveSideBar
            android:id="@+id/sideBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundColor="#30ffffff"
            app:chooseTextColor="@android:color/white"
            app:circleRadius="24dp"
            app:hintTextSize="32sp"
            app:radius="20dp"
            app:textColor="#969696"
            app:textSize="10sp" />

    </FrameLayout>
</LinearLayout>
